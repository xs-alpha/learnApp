<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragment.FavorateFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启动服务"
                android:textSize="@dimen/btn_text_size"></Button>

            <Button
                android:id="@+id/stop_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止服务"
                android:textSize="@dimen/btn_text_size"></Button>

            <Button
                android:id="@+id/start_bro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启动广播"
                android:textSize="@dimen/btn_text_size"></Button>

            <Button
                android:id="@+id/dyn_bro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态广播"
                android:textSize="@dimen/btn_text_size"></Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/write_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写缓存"
                android:textSize="@dimen/btn_text_size"></Button>
            <Button
                android:id="@+id/proc_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产者"
                android:textSize="@dimen/btn_text_size"></Button>
            <TextView
                android:id="@+id/consu_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"></TextView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/read_jar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读dex"
                android:textSize="@dimen/btn_text_size"></Button>
            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textSize="@dimen/btn_text_size"></Button>
            <EditText
                android:id="@+id/search_txt"
                android:layout_width="60dp"
                android:background="@color/white"
                android:layout_height="35dp"></EditText>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/showInf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"></TextView>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>